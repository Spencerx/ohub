<div class="signin-form center-block">
  <h3 class="text-center">Sign in<h3>
  <form id="signInForm" method="POST" action="/auth">
    <input id="signInLoginInput" name="username" type="text" class="form-control" placeholder="Email address" autofocus>
    <input id="signInPasswordInput" name="password" type="text" class="form-control" placeholder="Password">
    <input type="submit" class="btn btn-success btn-lg pull-right" value="Sign in">
  </form>
</div>
