<script id="template" type="text/ractive">

  <div class="normal-content container" style="margin-top: 30px;">

    <table width="100%">
      <tr>
        <td width="310px" style="vertical-align: top">
          <p>
            <img src="{{#if ! project.imageUrl }}/images/no-user-picture.png{{else}}{{ user.imageUrl }}{{/if}}" style="border: 1px solid #ccc; margin-bottom: 15px; border-radius: 5px; margin-right: 30px;">
          </p>
          <div class="vertical-menu-icon user-info-list">
            {{#if user.position }}
              <div>
                <span class="glyphicon glyphicon-user"></span>{{ user.position }}
              </div>
            {{/if}}
            {{#if user.company }}
              <div>
                <span class="glyphicon glyphicon-briefcase"></span>{{ user.company }}
              </div>
            {{/if}}
            {{#if user.location }}
              <div>
                <span class="glyphicon glyphicon-map-marker"></span>{{ user.location }}
              </div>
            {{/if}}
            {{#if user.website }}
              <div>
                <span class="glyphicon glyphicon-link"></span><a href="{{ user.website }}">{{ user.website }}</a>
              </div>
            {{/if}}
          </div>
        </td>
        <td style="vertical-align: top">
          <button class="btn btn-sm btn-default pull-right" style="margin-top: 17px">
              <span class="glyphicon glyphicon-eye-open pull-left" style="margin-right: 10px"></span> Follow (30)
          </button>
          <h2>{{ user.firstname }} {{ user.lastname }}</h2>
          <p style="font-style: italic; margin-bottom: 40px">@{{ user.username }}</p>

          {{{ user.biography }}}

          {{#each user.projects:i}}
          <div class="row">
            <div class="col-md-12" style="margin-top: 30px;">
              <div style="width:100%; border: 1px solid #ccc; border-radius: 5px; padding: 30px;" >
                <h3 style="font-size: 2em; margin: 0; overflow: hidden; white-space: nowrap; color: #555;">{{ name }}</h3>
                <a href="/{{ user.username }}/{{ identifier }}">{{ user.username }}/{{ identifier }}</a>
                <p>{{ headline }}</p>
              </div>
            </div>
          </div>
          {{/each}}

        </td>
      <tr>
    </table>
  </div>

</script>

<div id="ractive-container">

</div>

<script data-main="/js/user" src="/packages/requirejs/require.js"></script>
